<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:cardCornerRadius="8dp"
        app:cardElevation="8dp"
        style="@style/CardView.">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:orientation="horizontal"
            android:weightSum="5"
            android:layout_gravity="center">

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/colour_shapeIV"
            android:layout_weight="1"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_gravity="center"
            android:scaleType="centerCrop"
            android:tint="@color/blue"
            app:srcCompat="@drawable/colour_item_list_shape"
             />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/colour_nameTV"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textColor="@color/white"
            android:text="Colour Name"
            android:textSize="18sp" />

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/colour_itemIV"
            android:layout_weight="1"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_gravity="center"
            android:src="@drawable/itemtest" />

        <ImageView
            android:id="@+id/colour_wishlistIV"
            android:layout_weight="1"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_gravity="center"
            android:src="@drawable/wishlist" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/colour_addToCollectionBtn"
            android:layout_weight="1"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_gravity="center"
            android:text="+"
            android:textSize="24sp"
            app:cornerRadius="40dp" />
        </LinearLayout>
    </FrameLayout>
</LinearLayout>